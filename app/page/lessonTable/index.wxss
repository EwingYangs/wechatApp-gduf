.lesson-table {
  /* margin: 10px; */
}

.lesson-table .lesson-title {
  height: 3.2em;
  line-height: 3.2em;
  text-align: center;
  /* border-top-left-radius: 10px; */
  /* border-top-right-radius: 10px; */
  color: #fff;
  background-color: rgb(105, 129, 234);
}

.lesson-table .lesson-title .select-tip {
  color: #dbd7d7;
}

.lesson-table .lesson-title .weui-select {
  border: 0 none;
}

.lesson-content {
  position: relative;
  margin: 10px;
}

.lesson-content .lesson-content-hd {
  display: flex;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  /* height: 3.2em; */
  /* line-height: 3.2em; */
  text-align: center;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  color: #000;
  background-color: rgb(213, 218, 244);
}

.lesson-title .lesson-bg {
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2em;
}

.lesson-content .lesson-content-hd .content-hd-one {
  width: 30px;
}

.lesson-content .lesson-content-hd .content-hd-day {
  flex: 1;
  text-align: center;
  height: 2em;
  font-size: 18px;
  line-height: 2em;
  color: #333;
}

