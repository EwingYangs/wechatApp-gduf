.lesson-content .lesson-content-bd {
  display: flex;
}

.lesson-content .lesson-content-bd .content-bd {
  flex: 1;
}

.lesson-content .lesson-content-bd:nth-child(6) {
  width: 20px;
  background-color: #ccc
}

.lesson-content .lesson-content-bd .content-bd-one {
  width: 30px;
  color: #c7c7c7;
}

.lesson-content-bd .content-bd-one .content-bd-item,
.lesson-content-bd .content-bd .content-bd-item
{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 22px;
  text-align: center;
  font-weight: 600;
}

.lesson-content-bd .content-bd-one .content-bd-item:nth-child(2n) {
  background: rgb(244, 247, 255);
}

.lesson-content-bd .content-bd-one .content-bd-item:nth-child(2n-1) {
  background: rgb(255, 255, 255);
}

.lesson-content-bd .content-bd:nth-child(2n) .content-bd-item:nth-child(2n-1) {
  background: rgb(255, 255, 255);
}

.lesson-content-bd .content-bd:nth-child(2n-1) .content-bd-item:nth-child(2n-1) {
  background: rgb(255, 255, 255);
}

.lesson-content-bd .content-bd:nth-child(2n)  {
  background: rgb(244, 247, 255);
}

.lesson-content-bd .content-bd:nth-child(2n) .content-bd-item:nth-child(2n) {
  background: rgb(244, 247, 255);
}

.lesson-content-bd .content-bd:nth-child(2n-1)  {
  background: rgb(244, 247, 255);
}

.lesson-content .lesson-content-detail {
  position: absolute;
  top: 36px;
  width: calc(100% - 30px);
  display: flex;
  padding-left: 30px;
}

.lesson-content .lesson-content-detail .content {
  height: 48em;
  width:94rpx;
}

.lesson-content .lesson-content-detail .content-detail text {
  display: block;
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  color: #fff;
}

.lesson-content-detail .content .content-detail {
  position: absolute;
  width: 40px;
  margin: 10rpx 3px 0;
  border-radius: 5px;
}

