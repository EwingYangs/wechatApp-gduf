.listItem {
  margin: 12px 12px 0px 12px;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.itemLeft {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.shorthand {
  margin: 0 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 18px;
  font-weight: 700;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}


.panel {
  padding-top: 158rpx;
}

.itemRight {
  margin-right: 20rpx;
