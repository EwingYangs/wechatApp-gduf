.add_pic view{display:inline-block;margin-top:20rpx;width:85rpx;height:200rpx;line-height:200rpx;text-align:center;background:url(https://bmob-cdn-12684.b0.upaiyun.com/2017/07/05/54bae4ce401b763e8042dbb0a05241c1.png) no-repeat left center;background-size:160rpx auto;padding-left: 80rpx;color: #b2b2b2;}
.image_box{width:100%;background:#fff;}
