/* page/find/index.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.label-2__icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
  width: 16px;
  height: 16px;
  border: 1px solid #e6e6ea;
  border-radius: 50%;
}

.label-2__icon-checked {
  position: absolute;
  left: 3px;
  top: 3px;
  width: 10px;
  height: 10px;
  background: #6981ea;
  border-radius: 50%;
}

.label-2__text {
  text-align: center;
  margin-top: 15px;
}

.label-2 {
  margin-left: 1.45em;
}

.label-2:first-child {
  margin-left: 0.65em;
}

.bbox {
  margin: 12px 12px 0px 12px;
  height: auto;
  overflow: auto;
}

.book-title {
  padding-top: 12rpx;
  padding-left: 24rpx;
}

.book-content {
  float: left;
  padding-bottom: 12rpx;
  padding-left: 24rpx;
  width: 70%;
}

.book-bg {
  height: 47em;
  background-image: url(https://bmob-cdn-12684.b0.upaiyun.com/2017/09/05/552aeb3240172fbb80390ff4b6bf91a0.png);
  background-position: center;
  background-repeat: no-repeat;
  background-size: 15% 38%;
}

.book-view {
  float: right;
  padding-right: 24rpx;
  padding-top: 3em;
}

.bookcount {
  font-size: 54px;
}

.bookcount-zero {
  font-size: 54px;
  color: #f8f8f8;
}

.book-info-left {
  float: left;
  padding-right: 12px;
}

.img-icon {
  width: 64rpx;
  height: 64rpx;
}

.group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 10px;
}

.weui-navbar__slider.slider {
  position: absolute;
}

